@*@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">
    Current count: @user.currentCount
</p>

<input @bind-value="user.currentCount"/>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {

    private void IncrementCount()
    {
        user.currentCount++;
    }
}
*@